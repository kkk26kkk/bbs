<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Config 3.0//EN"  
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Comment">
	<insert id="insertComment" parameterType="com.kkk26kkk.bbs.model.CommentVo">
		INSERT INTO tb_comment
		VALUES (tb_comment_seq.nextval, #{articleId}, #{userId}, #{userName},
				#{contents}, #{parentId}, sysdate)
	</insert>
	
	<select id="getCommentList" parameterType="int" resultType="com.kkk26kkk.bbs.model.Comment">
		SELECT *
		FROM tb_comment
		WHERE article_id = #{articleId}
	</select>
	
	<select id="getCurrentCommentId" resultType="int">
		SELECT 
				TB_COMMENT_SEQ.CURRVAL
		FROM	DUAL
	</select>
	
	<select id="getComment" parameterType="int" resultType="com.kkk26kkk.bbs.model.Comment">
		SELECT
				*
		FROM	TB_COMMENT
		WHERE	ARTICLE_ID = #{articleId}
	</select>
    
    <insert id="insertNoticeArticle" parameterType="int">
        INSERT INTO TB_NOTICE_ARTICLE
               (NOTICE_ID, ARTICLE_ID, NOTICE_STT_DTM, NOTICE_END_DTM)
        VALEUS (TB_NOTICE_ARTICLE_SEQ.NEXTVAL, #{articleId}, SYSDATE, (SYSDATE + INTERVAL '14' DAY))
    </insert>
</mapper>