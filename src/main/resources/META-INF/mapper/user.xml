<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Config 3.0//EN"  
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="User">
	<select id="getUser" parameterType="String" resultType="com.kkk26kkk.bbs.model.User">
		SELECT *
		FROM tb_user
		WHERE user_id = #{userId}
	</select>
	
	<insert id="insertUser" parameterType="com.kkk26kkk.bbs.model.UserVo">
		INSERT INTO TB_USER
		VALUES (#{userId}, #{userPw}, #{userName}, #{userGrade})
	</insert>
</mapper>