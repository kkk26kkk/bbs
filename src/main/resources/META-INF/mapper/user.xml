<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Config 3.0//EN"  
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="User">
	<select id="getUser" parameterType="String" resultType="com.kkk26kkk.bbs.model.User">
		SELECT *
		FROM tb_user
		WHERE user_id = #{userId}
	</select>
	
	<insert id="insertUser" parameterType="com.kkk26kkk.bbs.model.UserVo">
		INSERT INTO TB_USER
		VALUES (#{userId}, #{userPw}, #{userName}, #{userGrade})
	</insert>
	
	<insert id="insertUserFollow" parameterType="com.kkk26kkk.bbs.model.UserFollowVo">
		INSERT INTO TB_USER_FOLLOW
		(
			FOLLOWEE_ID
		  , FOLLOWER_ID
		)
		VALUES
		(
			#{followeeId}
		  , #{followerId}
		)
	</insert>
</mapper>