<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Config 3.0//EN"  
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Article">
	<select id="getArticle" parameterType="int" resultType="com.kkk26kkk.bbs.model.Article">
		SELECT *
		FROM tb_article
		WHERE article_id = #{articleId}
	</select>

	<insert id="insertArticle" parameterType="com.kkk26kkk.bbs.model.ArticleVo">
		INSERT INTO tb_article
		VALUES (tb_article_seq.nextval, #{boardId}, #{userId}, #{userName}, #{title},
				#{contents}, #{parentId}, 0, sysdate)
	</insert>
	
	<update id="updateArticle" parameterType="com.kkk26kkk.bbs.model.ArticleVo">
		UPDATE tb_article
		SET 
			title = #{title},
			contents = #{contents}
			-- reg_date ? // XXX 날짜를 수정해도 글 목록의 순서는 그대로??
		WHERE article_id = #{articleId}
	</update>
	
	<delete id="deleteArticle" parameterType="int">
		DELETE 
		FROM tb_Article
		WHERE article_id = #{articleId}
	</delete>
	
	<select id="getCurrentArticleId" resultType="int">
		SELECT 
				TB_ARTICLE_SEQ.CURRVAL
		FROM	DUAL
	</select>
	
	<insert id="insertNoticeArticle" parameterType="int">
		INSERT	INTO TB_ARTICLE
				(ARTICLE_ID, NOTICE_STT_DTM, NOTICE_END_DTM)
		VALUES	
				(#{article_id}, SYSDATE, SYSDATE + (INTERVAL '14' DAY))
	</insert>
</mapper>